#!/bin/bash

cd $APPDIR

if [[ $1 == "install" ]]; then
    sudo apt-get update
    sudo apt-get -y install \
        libsdl2-dev \
        libsdl2-image-dev \
        libsdl2-mixer-dev \
        libsdl2-ttf-dev \
        libxml2-dev \
        libxmu-dev \
        mesa-utils \
        timidity
fi

if [[ $1 == "debug" ]]; then
    gdb -ex "set disable-randomization off" \
        -ex "set debuginfod enabled on" \
        -ex "run" \
        --args ./deusmagi "$@"
else
    # does the device use a software renderer
    if glxinfo -B | grep -q 'Device: llvmpipe'; then
        export LIBGL_ALWAYS_SOFTWARE=1
    fi
    
    exec ./deusmagi "$@"
fi